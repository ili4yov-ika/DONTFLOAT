{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Qt: Build with qmake (Debug)",
            "type": "shell",
            "command": "qmake",
            "args": [
                "DONTFLOAT.pro",
                "-spec", "win32-msvc",
                "CONFIG+=debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Run qmake for Qt project (Debug)",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Qt: Build with qmake (Release)",
            "type": "shell",
            "command": "qmake",
            "args": [
                "DONTFLOAT.pro",
                "-spec", "win32-msvc",
                "CONFIG+=release"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Run qmake for Qt project (Release)",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Qt: Build with nmake",
            "type": "shell",
            "command": "build_qt.bat",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Build with qmake and nmake using build_qt.bat",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Qt: Clean",
            "type": "shell",
            "command": "nmake",
            "args": ["clean"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Clean Qt build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "CMake: Configure (if CMake installed)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build",
                "-G", "Visual Studio 17 2022",
                "-A", "x64"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Configure CMake project (requires CMake installation)",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
