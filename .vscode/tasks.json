{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Qt: Build with qmake (Debug)",
            "type": "shell",
            "command": "qmake",
            "args": [
                "DONTFLOAT.pro",
                "-spec", "win32-msvc",
                "CONFIG+=debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Run qmake for Qt project (Debug)",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Qt: Build with qmake (Release)",
            "type": "shell",
            "command": "qmake",
            "args": [
                "DONTFLOAT.pro",
                "-spec", "win32-msvc",
                "CONFIG+=release"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Run qmake for Qt project (Release)",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Qt: Build with nmake",
            "type": "shell",
            "command": "build_qt.bat",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Build with qmake and nmake using build_qt.bat",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Qt: Clean",
            "type": "shell",
            "command": "nmake",
            "args": ["clean"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Clean Qt build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "CMake: Configure (if CMake installed)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build",
                "-G", "Visual Studio 17 2022",
                "-A", "x64"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Configure CMake project (requires CMake installation)",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "CMake: Build Debug (if CMake installed)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Debug",
                "--target", "DONTFLOAT"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$msCompile",
            "detail": "Build DONTFLOAT in Debug mode using CMake",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "CMake: Configure (if CMake installed)"
        },
        {
            "label": "CMake: Build Tests (if CMake installed)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Debug",
                "--target", "donfloat_test", "donfloat_file_test"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$msCompile",
            "detail": "Build test executables using CMake",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "CMake: Configure (if CMake installed)"
        },
        {
            "label": "CMake: Run BPM File Test",
            "type": "shell",
            "command": "${workspaceFolder}/build/Debug/donfloat_file_test.exe",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Run BPM file test on real audio files",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "CMake: Build Tests (if CMake installed)"
        },
        {
            "label": "CMake: Run All Tests",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--test-dir", "build",
                "--output-on-failure"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Run all CTest tests",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "CMake: Build Tests (if CMake installed)"
        }
    ]
}
